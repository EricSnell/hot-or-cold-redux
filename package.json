    "redux": "^3.5.2"
  },
  "devDependencies": {
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "chokidar-cli": "^1.2.0",
    "webpack": "^1.13.1"
  }
